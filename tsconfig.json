{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@cli/*": ["gui/*"],
      "@gui/*": ["gui/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/gui/types",
      "./src/gui/main/managers",
      "./src/gui/plugins"
    ],
    "sourceMap": true,
    "strictBindCallApply": true,
    "outDir": "./dist"
  },
  "files": [
    "src/gui/global.d.ts",
    "src/cli/global.d.ts"
  ],
  "include": [
    "./src"
  ]
}
